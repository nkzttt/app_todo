@charset "UTF-8"

@import '_variables/*'
@import '_mixins/*'
@import '_partials/*'

html,
body
  width: 100%
  height: 100%
  padding: 0
  margin: 0

html
  font-size: $size-root

body
  background-color: $color-background
  color: $color-font
  font-size: $size-font-normal
  letter-spacing: 0.05rem

a
  color: $color-main

.container
  width: 100%

.header
  width: 100%
  background-color: $color-main
  &__insideContainer
    width: $size-container
    position: relative
    margin: 0 auto
    padding: 0.75rem 0

.rootSiteLink
  display: flex
  width: 100%
  align-items center
  justify-content space-between

.siteLogo
  display: block
  position: relative
  padding-left: 4rem
  color: $color-background
  font-size: $size-font-primary
  font-weight: bold
  text-decoration: none
  text-shadow 1px 1px 3px $color-shadow
  &__icon
    display: block
    position: absolute
    top: (($size-font-primary - 4rem) / 2)
    left: 0
    font-size: 4rem

.rootSearch
  display: block
  color: $color-background
  font-size: $size-font-small
  text-decoration: none
  text-align: center
  text-shadow 1px 1px 3px $color-shadow
  &__icon
    display: block
    margin-bottom: 3px
    font-size: $size-font-primary

.main
  &__insideContainer
    width: $size-container
    position: relative
    margin: 0 auto
    padding-top: 3rem
