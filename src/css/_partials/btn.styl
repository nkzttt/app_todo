.btn
	display: block
	padding: 5px 1rem 6px
	border-radius 3px
	letter-spacing: 0.1rem
	cursor pointer
	&--small
		padding: 3px 0.7rem
		font-size: $size-font-small
	&--primary
		background-color: $color-main
		color: #fff
		font-weight: bold
	&--secondary
		border solid 1px $color-main
		color: $color-main
	&--attention
		background-color: $color-sub
		color: #fff
		font-weight: bold
